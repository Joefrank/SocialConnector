<Window x:Class="SocialWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="1000">
    <Grid Margin="10" HorizontalAlignment="Right" Width="914">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_App">
                    <MenuItem Header="_Version" />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Twitter">
                    <MenuItem Header="_GetTweet" Click="AcceptUrlOrId" />
                    <MenuItem Header="_Tweet" />
                    <MenuItem Header="_ListTweets" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" Width="912" />
        </DockPanel>

    </Grid>
</Window>
